<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/teacher_article_list_row_selector"
    android:padding="8dp">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/student_head"
        android:layout_width="52.5dp"
        android:layout_height="52.5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/student_head"
        android:layout_toRightOf="@+id/student_head"
        android:text="Xu Hai"
        android:textColor="@color/year"
        android:textSize="16sp" />

    <!-- date -->
    <TextView
        android:id="@+id/submiteDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/studentName"
        android:text="2015-1-25"
        android:textColor="@color/student_article_title_hint"
        android:textSize="14sp" />

    <!-- title -->
    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/student_head"
        android:layout_toRightOf="@+id/student_head"
        android:lines="1"
        android:singleLine="true"
        android:text="A Title Of An Article"
        android:textColor="@color/year"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/student_head"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/article_type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="type"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <!-- Thumbnail score -->
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88"
            android:textColor="@color/red"
            android:textSize="18sp" />

    </LinearLayout>


    <!--
    <TextView
        android:text="content"
        android:id="@+id/articleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/articleTitle"
        android:layout_toRightOf="@+id/score"
        android:singleLine="true"
        android:textColor="@color/student_article_content_in_teacher"
        android:textSize="@dimen/number" />
    -->

</RelativeLayout>