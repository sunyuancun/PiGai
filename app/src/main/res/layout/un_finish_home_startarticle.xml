<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/articleDraftWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/student_article_title_height"
            android:layout_marginBottom="@dimen/student_article_title_content_margin"
            android:background="@drawable/article_title_shape"
            android:gravity="center"
            android:hint="请输入您的作文题目"
            android:textColor="@color/gray_content"
            android:textColorHint="@color/student_article_title_hint"
            android:textSize="@dimen/my_article_title" />

        <com.cikuu.pigai.activity.uiutils.NoPasteMenuEditText
            android:id="@+id/contentEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/student_article_title_content_margin"
            android:layout_weight="1.00"
            android:background="#f5f5f5"
            android:gravity="left|top"
            android:hint="请输入您的作文内容"
            android:inputType="textUri|textMultiLine"
            android:paddingLeft="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:paddingRight="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:textColor="@color/gray_content"
            android:textSize="@dimen/my_article_content_in_studentWrite">

            <requestFocus />
        </com.cikuu.pigai.activity.uiutils.NoPasteMenuEditText>

    </LinearLayout>

    <TextView
        android:id="@+id/wordCountTextView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22dp"
        android:background="@color/wordcount_color"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/bg_white"
        android:textSize="20sp" />


    <RelativeLayout
        android:id="@+id/yuyin_relativeLayout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/img_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/yuyin_image" />
    </RelativeLayout>
</RelativeLayout>

