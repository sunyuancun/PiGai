<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08000000"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:id="@+id/ModifiedTimesLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/score"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/student_home_ui_background_deep_blue"
                        android:text="改"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/articleModifiedTimesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/shi"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ManFenLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/score"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/ModifiedTimesLine"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/student_home_ui_background_deep_blue"
                        android:text="满"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/manfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/man"
                        android:textColor="#999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ZishuLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/score"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/ManFenLine"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/zishu"
                        android:background="@drawable/student_home_ui_background_deep_blue"
                        android:text="字"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/zishu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/RankLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/score"
                    android:layout_toRightOf="@+id/ZishuLine"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/zishu"
                        android:background="@drawable/student_home_ui_background_deep_blue"
                        android:text="排名"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/essay_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="#ee3333"
                    android:textSize="30sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_below="@+id/score"
                    android:layout_marginTop="10dp"
                    android:background="#44000000" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/article_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="作文标题"
                    android:textColor="#1b1b1b"
                    android:textSize="20sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/articleBodyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="downloading from network..."
                    android:textColor="#1b1b1b"
                    android:textSize="16sp" />
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp">

            <RelativeLayout
                android:id="@+id/radioButtonLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        style="@style/FlatRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/flat_round_shape_left"
                        android:checked="true"
                        android:text="自动点评"
                        android:textColor="#ffffff" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        style="@style/FlatRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/flat_round_shape_middle"
                        android:checked="false"
                        android:text="人工点评"
                        android:textColor="#3ab3ff" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        style="@style/FlatRadioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/flat_round_shape_right"
                        android:text="作文要求"
                        android:textColor="#3ab3ff" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButtonLine">

                <FrameLayout
                    android:id="@+id/zidong_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="句酷点评"
                            android:textColor="#1177cc"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/jukudianpingTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="句酷点评"
                            android:textColor="#1b1b1b"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/commentOnEachSentence"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/student_home_ui_background_deep_blue"
                            android:text="按 句 点 评"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/rengong_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:visibility="gone">

                    <ListView
                        android:id="@+id/commentsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/list_divider"
                        android:dividerHeight="0dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/zuowenyaoqiu_framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:visibility="gone">

                    <include layout="@layout/student_submitted_article_requment" />
                </FrameLayout>

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>