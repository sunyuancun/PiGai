<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/article_list_item_margin"
    android:paddingRight="@dimen/article_list_item_margin"
    android:paddingTop="@dimen/article_list_item_margin"
    android:paddingBottom="@dimen/article_list_item_margin"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/draft"
        android:layout_width="@dimen/draft_icon_size"
        android:layout_height="@dimen/draft_icon_size"
        android:layout_marginRight="@dimen/article_list_item_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/draft" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="177.5dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/draft"
        android:layout_toRightOf="@id/draft"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/article_list_item_title_size"
        android:text="大学生不健康的生活习惯" />

    <TextView
        android:id="@+id/endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:text="截止日期："
        android:textSize="@dimen/article_list_item_content_size"
        android:layout_alignBottom="@+id/draft"
        android:layout_alignLeft="@+id/articleTitle"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/student_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="@dimen/article_list_item_content_size"
        android:textColor="#feaa00"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:text="人提交"
        android:textSize="@dimen/article_list_item_content_size"
        android:layout_alignTop="@+id/endtime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>